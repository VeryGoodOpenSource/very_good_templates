name: license_check_linux

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

on:
  pull_request:
    paths:
      - '{{project_name.snakeCase()}}_linux/pubspec.yaml'
      - '.github/workflows/license_check_linux.yaml'
  push:
    branches:
      - main
    paths:
      - '{{project_name.snakeCase()}}_linux/pubspec.yaml'
      - '.github/workflows/license_check_linux.yaml'

jobs:
  license_check:
    uses: VeryGoodOpenSource/very_good_workflows/.github/workflows/license_check.yml@v1
    with:
      flutter_version: "3.35.x"
      working_directory: {{project_name.snakeCase()}}_linux
      allowed: 'MIT,BSD-3-Clause,BSD-2-Clause,Apache-2.0,Zlib'